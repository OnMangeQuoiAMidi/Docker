{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="row">
    {% if error %}
        <div class="alert alert-danger col-sm-6 col-sm-offset-3" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="col-sm-6 col-sm-offset-3">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" class="form-control" />
        </div>

        <div class="form-group">
            <div class="checkbox-inline">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>

        <div class="form-actions">
            <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-default">Mot de passe oubli√©</a>
            <input type="submit"
                class="btn btn-success"
                id="_submit"
                name="_submit"
                value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
</div>
{% endblock fos_user_content %}
